<?xml version="1.0" encoding="utf-8"?>
<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd" schemaVersion="75">
  <server agentAutoRegisterKey="123456789abcdef" artifactsdir="artifacts" commandRepositoryLocation="default" serverId="" />
  <templates>
    <pipeline name="docker">
      <stage name="build">
        <jobs>
          <job name="build">
            <tasks>
              <exec command="/bin/bash">
                <arg>-c</arg>
                <arg>docker login --email $DOCKER_EMAIL --password $DOCKER_PASSWORD --username $DOCKER_USERNAME &amp;&amp; docker build --tag "$DOCKER_USERNAME/$DOCKER_IMAGE:$GO_REVISION" . &amp;&amp; docker push "$DOCKER_USERNAME/$DOCKER_IMAGE:$GO_REVISON"</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
      <stage name="test">
        <jobs>
          <job name="test">
            <tasks>
              <exec command="/bin/bash">
                <arg>-c</arg>
                <arg>docker login --email $DOCKER_EMAIL --password $DOCKER_PASSWORD --username $DOCKER_USERNAME &amp;&amp; docker run --privileged "$DOCKER_USERNAME/$DOCKER_IMAGE:$GO_REVISION" test</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
      <stage name="push">
        <jobs>
          <job name="push_latest">
            <tasks>
              <exec command="/bin/bash">
                <arg>-c</arg>
                <arg>docker login --email $DOCKER_EMAIL --password $DOCKER_PASSWORD --username $DOCKER_USERNAME &amp;&amp; docker pull "$DOCKER_USERNAME/$DOCKER_IMAGE:$GO_REVISION" &amp;&amp; docker tag --force "$DOCKER_USERNAME/$DOCKER_IMAGE:$GO_REVISION" "$DOCKER_USERNAME/$DOCKER_IMAGE:latest" &amp;&amp; docker push "$DOCKER_USERNAME/$DOCKER_IMAGE:latest"</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
    </pipeline>
  </templates>
</cruise>

