<?xml version="1.0" encoding="utf-8"?>
<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd" schemaVersion="75">
  <server artifactsdir="artifacts" agentAutoRegisterKey="123456789abcdef" commandRepositoryLocation="default" serverId="7b37886a-8a4b-4871-851b-271753499a3f" />
  <templates>
    <pipeline name="docker">
      <stage name="build">
        <jobs>
          <job name="build">
            <tasks>
              <exec command="/bin/bash">
                <arg>-c</arg>
                <arg>docker build --tag "$DOCKER_USERNAME/$DOCKER_IMAGE:$GO_REVISION" .</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
      <stage name="test">
        <jobs>
          <job name="test">
            <tasks>
              <exec command="/bin/bash">
                <arg>-c</arg>
                <arg>docker run "$DOCKER_USERNAME/$DOCKER_IMAGE:$GO_REVISION" test</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
      <stage name="login">
        <jobs>
          <job name="login">
            <tasks>
              <exec command="/bin/bash">
                <arg>-c</arg>
                <arg>docker login --email $DOCKER_EMAIL --password $DOCKER_PASSWORD --username $DOCKER_USERNAME</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
      <stage name="push">
        <jobs>
          <job name="push_revision">
            <tasks>
              <exec command="/bin/bash">
                <arg>-c</arg>
                <arg>docker push "$DOCKER_USERNAME/$DOCKER_IMAGE:$GO_REVISON"</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
          <job name="push_latest">
            <tasks>
              <exec command="/bin/bash">
                <arg>-c</arg>
                <arg>docker tag --force "$DOCKER_USERNAME/$DOCKER_IMAGE:$GO_REVISION" "$DOCKER_USERNAME/$DOCKER_IMAGE:latest"</arg>
                <runif status="passed" />
              </exec>
              <exec command="/bin/bash">
                <arg>-c</arg>
                <arg>docker push "$DOCKER_USERNAME/$DOCKER_IMAGE:latest"</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
    </pipeline>
  </templates>
